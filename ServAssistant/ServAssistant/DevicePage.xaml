<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServAssistant.DevicePage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="imageButton" Text="Zrób zdjęcie" BackgroundColor="LightSeaGreen"/>
            <Grid RowSpacing="5" ColumnSpacing="5" x:Name="imageGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Button x:Name="buttonSend" Text="Wyślij na serwer" BackgroundColor="LightSeaGreen"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>